//Algoritmo 04
#include <stdio.h>
#include <stdlib.h>

int main() {
	
	//Declarando variáveis
	int primeiroValor;
	int segundoValor;
	
	//Exibindo as variáveis
	printf("Digite o primeiro valor: \n");
	 scanf("%i", &primeiroValor);
	 
	printf("Digite o segundo valor: \n");
	 scanf("%i", &segundoValor);
	 
    int diferenca = primeiroValor - segundoValor;
    
    printf("A diferença entre os dois valores é: %i \n", diferenca);
    
    return 0;
    
}
